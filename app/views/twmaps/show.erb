<div class='row'>
  <div class='col-lg-3'>
    <div class='row' style='height: 710px; overflow: scroll;'>
      <%- unless current_user %>
        <%= render partial: 'introduction' %>
      <%- else %>
        <%= render partial: 'friend_list', locals: { friend_list: @millifes_list } %>
      <%- end %>
    </div>
  </div>
  <div class='col-lg-9'>
    <canvas style='border:1px solid gray' id='mlmap' width='800px' height='708px'></canvas>
  </div>
</div>
<%- if current_user %>
  <div class='row'>
    <div class='col-lg-3'>
      <div class='row'>
        <%= render partial: 'twitter_widget' %>
      </div>
    </div>
    <div class='col-lg-9' style='text-align: center'>
      <a href='#' id='mlmap-output-button' class='btn btn-primary' role='button'>作成したマップ画像を開く！</a>
    </div>
  </div>
<%- end %>
